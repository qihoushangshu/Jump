<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/secondView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:text="second画面"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/secondEdit"
        app:layout_constraintTop_toBottomOf="@+id/secondView"
        app:layout_constraintLeft_toLeftOf="@+id/secondView"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondBtn"
        android:text="第二个画面"
        app:layout_constraintTop_toBottomOf="@+id/secondEdit"
        app:layout_constraintLeft_toLeftOf="@+id/secondEdit"
        android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>